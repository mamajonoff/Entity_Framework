@{
    ViewData["Title"] = "Home Page";
}
@model List<Book>

<div class="d-flex justify-content-end w-100">
    <a asp-controller="home" asp-action="add" class="btn btn-success">+ Add New</a>
</div>

    @if (Model.Count > 0)
    {
        <table class="table table table-striped">
          <thead>
            <tr>
              <th scope="col">#Id</th>
              <th scope="col">Name</th>
              <th scope="col">Author</th>
              <th scope="col">Price</th>
              <th scope="col">Date</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
        @foreach (var book in Model)
        {
            <tr>
              <th scope="row">@book.Id</th>
              <td>@book.Name</td>
              <td>@book.Author</td>
              <td>@book.Price</td>
              <td>@book.Date</td>
              <td class="d-flex justify-content-start">
                 <a asp-controller="home" asp-action="edit" asp-route-id="@book.Id" class="btn btn-primary" style="width: 100px;">Edit</a>
                 <a asp-controller="home" asp-action="delete" asp-route-id="@book.Id" onclick="return confirm('Are you sure delete this book?')" class="btn btn-danger" style="width: 100px; margin-left: 20px">Delete</a>
              </td>
            </tr>
        }  
        </tbody>
        </table>
    }
    else
    {
        <h3>There is no any books yet!</h3>
    }
    
